#include <iostream>
#include "stdio.h"
#include "windows.h"

using namespace std;


int main()
{
	string nName = "Rowin";
	int nGender = 0;
	int nJob = 0;

	int ListNumber = 0;


	/*
	===GAME START===
	게임을 시작합니다.
	게임에 오신 것을 환영합니다.
	========================================
	*/
	cout << "===GAME START===" << endl;
	cout << "게임을 시작합니다." << endl;
	cout << "게임에 오신 것을 환영합니다." << endl;
	cout << "========================================" << endl;


	/*
	먼저 당신의 성별을 알려주세요.
	========================================
	1단계: 성별 정하기
	========================================
	당신은 남자인가요, 여자인가요?
	1. 남자
	2. 여자
	번호:
	*/
	cout << "먼저 당신의 성별을 알려주세요." << endl;
	cout << "========================================" << endl;
	cout << "1단계: 성별 정하기" << endl;
	cout << "========================================" << endl;
	cout << "당신은 남자인가요, 여자인가요?" << endl;
	cout << "1. 남자" << endl << "2. 여자" << endl;
	cout << "번호: ";
	cin >> nGender;
	cout << endl;



	/*
	========================================
	성별을 정하셨습니다.
	이제 당신의 이름을 정해주세요.
	디폴트 네임 사용하기: 1
	직접 이름 정하기: 2

	default name:
	남자: 제임스	여자: 앨리스
	========================================

	2단계: 이름 정하기

	========================================
	당신의 이름은?
	:
	*/
	if (nGender == 1)
	{
		nName = "James";
		nJob == 1;
	}
	else if (nGender == 2)
	{
		nName = "Alice";
		nJob == 2;
	}
	cout << "========================================" << endl;
	cout << "성별을 정하셨습니다." << endl;
	cout << "이제 당신의 이름을 정해주세요." << endl;
	cout << "디폴트 네임 사용하기: 1" << endl;
	cout << "직접 이름 정하기: 2" << endl << endl;
	cout << "default name:" << endl;
	cout << "남자: 제임스\t여자: 앨리스" << endl;
	cout << "========================================" << endl << endl;
	cout << "2단계: 이름 정하기" << endl << endl;
	cout << "========================================" << endl;
	cout << "당신의 이름은?" << endl << ": ";
	cin >> ListNumber;
	cout << endl << "========================================" << endl;


	if (ListNumber == 1)
	{
		cout << "이름을 고르지 않으셨습니다." << endl;
		cout << "디폴트 네임을 사용하셨습니다." << endl;
		cout << "디폴트 네임: ";

		if (nGender == 1)
		{
			cout << nName << endl;
		}
		else if (nGender == 2)
		{
			cout << nName << endl;
		}
	}
	else if (ListNumber == 2)
	{
		cout << "이름을 정하세요." << endl;
		cout << ": ";
		cin >> nName;
		cout << endl;
		cout << nName;
	}


	/*
	========================================
	이름을 정했습니다.
	이제 직업을 정해주세요.
	*/

	cout << "========================================" << endl;
	cout << "이름을 정했습니다." << endl;
	cout << "이제 직업을 정해주세요." << endl;


	/*
	========================================

	3단계: 직업 정하기


	*/
	cout << "========================================" << endl << endl;
	cout << "3단계: 직업 정하기" << endl << endl;


	/*
	========================================
	========================================

	1) 기사
	당신은 검술을 배운 고결한 기사입니다.
	시골 출신인 당신은 좀 더 넓은 세상을 구경하기 위해 길을 나섭니다.

	2) 마법사
	당신은 심오한 마법의 학문을 배운 영리한 마법사입니다.
	깊은 산 속의 시골 출신인 당신은 더 큰 세상에서 지식을 쌓기 위해 길을 나섭니다.

	3) 암살자
	당신은 그림자 속에서 움직이는 암살단의 일원이었습니다.
	유능했지만 정의감이 넘치는 당신은 암살단의 방식에 적응하지 못해 그들과 떨어지기로 결심합니다.
	당신은 당신의 죄를 속죄할 방법을 찾기 위해 길을 나섭니다.

	4) 사제
	당신은 신앙 마법을 사용하는 사제입니다.
	당신은 세상을 여행하며 많은 사람들을 돕기 원했습니다.
	당신은 정의를 행하기 위해 길을 나섭니다.
	*/

	cout << "========================================" << "========================================" << endl << endl;
	cout << "1) 기사" << endl;
	cout << "당신은 검술을 배운 고결한 기사입니다." << endl;
	cout << "시골 출신인 당신은 좀 더 넓은 세상을 구경하기 위해 길을 나섭니다." << endl << endl;
	cout << "2) 마법사" << endl;
	cout << "당신은 심오한 마법의 학문을 배운 영리한 마법사입니다." << endl;
	cout << "깊은 산 속의 시골 출신인 당신은 더 큰 세상에서 지식을 쌓기 위해 길을 나섭니다." << endl << endl;
	cout << "3) 암살자" << endl;
	cout << "당신은 그림자 속에서 움직이는 암살단의 일원이었습니다." << endl;
	cout << "유능했지만 정의감이 넘치는 당신은 암살단의 방식에 적응하지 못했습니다." << endl;
	cout << "당신은 그들과 떨어지기로 결심합니다." << endl;
	cout << "당신은 당신의 죄를 속죄할 방법을 찾기 위해 길을 나섭니다." << endl << endl;
	cout << "4) 사제" << endl;
	cout << "당신은 신앙 마법을 사용하는 사제입니다." << endl;
	cout << "당신은 세상을 여행하며 많은 사람들을 돕기 원했습니다." << endl;
	cout << "당신은 정의를 행하기 위해 길을 나섰습니다." << endl;


	/*

	========================================
	========================================

	선택할 직업의 번호를 누르고, 엔터로 결정하세요.
	당신이 선택할 직업은?
	:
	*/
	cout << endl << "========================================" << endl;
	cout << "========================================" << endl << endl;
	cout << "선택할 직업의 번호를 누르고, 엔터로 결정하세요." << endl;
	cout << "당신이 선택할 직업은?" << endl;
	cout << ": ";
	cin >> nJob;
	cout << endl;


	/*

	========================================
	========================================

	당신이 선택한 직업은 <> 입니다.
	*/
	cout << endl << "========================================" << endl << "========================================" << endl << endl;
	cout << "당신이 선택한 직업은 <";
	if (nJob == 1)
	{
		cout << "기사";
	}
	else if (nJob == 2)
	{
		cout << "마법사";
	}
	else if (nJob == 3)
	{
		cout << "암살자";
	}
	else if (nJob == 4)
	{
		cout << "사제";
	}
	cout << ">입니다." << endl;
	cout << "게임을 시작합니다." << endl;


	/*
	========================================

	===============GAME BEGIN===============

	========================================
	*/
	cout << "========================================" << endl << endl;
	cout << "===============GAME BEGIN===============" << endl << endl;
	cout << "========================================" << endl;


	/*
	당신은 길을 걸어가고 있었다.
	다음 도시로 향하던 당신은 길가에 부서져 있는 마차를 발견한다.
	*/
	cout << "당신은 길을 걸어가고 있었다." << endl;
	cout << "다음 도시로 향하던 당신은 길가에 부서져 있는 마차를 발견한다.";

	//기사의 경우
	/*
	숙련된 기사인 당신은 안전을 확보하기 위해 주변에 적이 있는지 없는지를 확인했다.
	당신을 공격할 수 있는 무언가가 없다는 것을 확인한 당신은 마차로 다가갔다.
	*/
	if (nJob == 1)
	{
		cout << "숙련된 기사인 당신은 안전을 확보하기 위해 주변에 적이 있는지 없는지를 확인했다." << endl;
		cout << "당신을 공격할 수 있는 무언가가 없다는 것을 확인한 당신은 마차로 다가갔다." << endl;
	}
	//마법사의 경우
	/*
	무슨 일이 있었던 것인지 호기심이 든 당신은 마차로 다가가보기로 결심했다.
	당신은 조심스럽게, 천천히 마차로 다가갔다.
	다행히 손이 닿는 거리만큼 다가올 때까지도 아무도 당신을 공격하지 않았다.
	*/
	else if (nJob == 2)
	{
		cout << "무슨 일이 있었던 것인지 호기심이 든 당신은 마차로 다가가보기로 결심했다." << endl;
		cout << "당신은 조심스럽게, 천천히 마차로 다가갔다." << endl;
		cout << "다행히 손이 닿는 거리만큼 다가올 때까지도 아무도 당신을 공격하지 않았다." << endl;
	}
	//암살자의 경우
	/*
	당신은 이 참상이 사람에 의해 일어난 것이 아니라는 것을 바로 알았다.
	근처에서 기척이 느껴지지 않았다.
	하지만 혹시 있지도 모를 함정을 조심하며, 당신은 천천히 마차로 이동했다.
	*/
	else if (nJob == 3)
	{
		cout << "당신은 이 참상이 사람에 의해 일어난 것이 아니라는 것을 바로 알았다." << endl;
		cout << "근처에서 기척이 느껴지지 않았다." << endl;
		cout << "하지만 혹시 있지도 모를 함정을 조심하며, 당신은 천천히 마차로 이동했다." << endl;
	}
	//사제의 경우
	/*
	당신은 혹시 살아있을지 모를 누군가를 구하기 위해 망설임 없이 바로 움직였다.
	마차 주변에 참혹한 모습으로 쓰러져 있는 시체들은 당신에게 죄책감을 느끼도록 만들었다.
	조금 더 빨리 도착했다면 구할 수 있지 않았을까?
	*/
	else if (nJob == 4)
	{
		cout << "당신은 혹시 살아있을지 모를 누군가를 구하기 위해 망설임 없이 바로 움직였다." << endl;
		cout << "마차 주변에 참혹한 모습으로 쓰러져 있는 시체들은 당신에게 죄책감을 느끼도록 만들었다." << endl;
		cout << "조금 더 빨리 도착했다면 구할 수 있지 않았을까?" << endl;
	}


	/*
	(아무 숫자나 입력하고 엔터를 눌러서 계속)
	*/
	cout << "(아무 숫자나 입력하고 Enter를 눌러서 계속)" << endl;
	ListNumber = 0;
	cin >> ListNumber;


	/*
	안타깝지만 살아남은 사람은 한 명도 없었다.
	그때, 어디에선가 덜컹거리는 소리가 들렸다.
	*/





	return 0;
}
